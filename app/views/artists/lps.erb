<div class="row justify-content-center">
	<table class="table table-hover table-bordered col-sm-4 content-center">
		<thead><th colspan="3"><h4><%= @artist.name %>'s LP list</h4></th></thead>
		<tbody class="table-striped">
			<% @lps.each do |lp| %>
				<tr>
					<td colspan="2"><%= lp.name %></td>
				</tr>
			<% end %>
			<tr>
				<td colspan="2" class="text-center">
					<%= link_to 'Back', artist_path, class: "btn btn-secondary" %>
				</td>
			</tr>
    </tbody>
  </table>
</div>
