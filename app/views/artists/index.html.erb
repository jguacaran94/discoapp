<p id="notice"><%= notice %></p>

<div class="row justify-content-center">
	<table class="table table-hover table-bordered col-sm-4 content-center">
		<thead><th colspan="3"><h4>Artist list</h4></th></thead>
    <tbody class="table-striped">
      <% @artists.each do |a| %>
        <tr>
          <td><%= link_to a.name, a, class: "btn btn-link-hover" %></td>
          <td><%= link_to 'Edit', edit_artist_path(a), class: "btn btn-secondary btn-sm" %></td>
          <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
			<tr>
				<td colspan="3" class="text-center">
          <%= link_to 'New Artist', new_artist_path, class: "btn btn-primary" %>
				</td>
			</tr>
    </tbody>
  </table>
</div>
